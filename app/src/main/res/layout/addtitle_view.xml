<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gettitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ntitle"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/getcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ncode"
        android:layout_below="@id/gettitle"
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/titlein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gettitle"
        android:ems="5"/>
    <EditText
        android:id="@+id/codein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gettitle"
        android:layout_toRightOf="@id/getcode"
        android:ems="5"/>

</RelativeLayout>